{% extends 'base.html.twig' %}

{% block title %}Anasayfa{% endblock %}

{% block body %}

    <div class="container">
        <!-- form -->
        <div class="contact">

            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="spacer">
                        <h4>Üye Olun</h4>
                        <form role="form">
                            <div class="form-group">
                                <input type="text" class="form-control" id="name" placeholder="Adınızı giriniz." required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="lastName" placeholder="Soyadınızı giriniz." required>
                            </div>
                            <div class="form-group">
                                <label>Doğum tarihinizi giriniz.</label>
                                <input type="date" class="form-control" id="dateOfBirth" placeholder="Doğum tarihinizi giriniz." required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="tc" placeholder="T.C. kimlik numaranızı giriniz." required>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" id="email" placeholder="Email adresinizi giriniz." required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="password" placeholder="Şifrenizi giriniz." required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="password" placeholder="Şifrenizi tekrar giriniz." required>
                            </div>
                            <button type="submit" class="btn btn-default">Üye olun</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- form -->

{% endblock %}