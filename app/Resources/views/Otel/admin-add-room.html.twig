{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <!-- form -->
        <a href="{{ path('admin') }}">Admin Index</a>
        <label>>>></label>
        <a id="odalar" href="">Odalar</a>
        <label>>>></label>
        <a id="odaEkle" href="">Oda Ekle</a>
        <div class="contact">

            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="spacer">
                        <h4>Otel Bilgileri</h4>
                        <form id="RoomAddForm" role="form">
                            <div class="form-group">
                                <label >Tip</label>
                                <input class="form-control" type="text" id="type" name="type" value=""> </input>
                            </div>
                            <div class="form-group">
                                <label >Fiyat</label>
                                <input class="form-control" type="number" min=0 id="price" name="price" value=""> </input>
                            </div>
                            <div class="form-group">
                                <label >Kat</label>
                                <input class="form-control" type="number" min=0 id="floor" name="floor" value=""> </input>
                            </div>
                            <div class="form-group">
                                <label >Detay</label>
                                <textarea style="resize: none;height: 150px;width: 750px" id="detail" name="detail" value=""></textarea>
                            </div>
                            <button type="submit" class="btn btn-default">OdayÄ± Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    <script language="JavaScript">

        var qsParm = new Array();
        var query = window.location.search.substring(1);
        var parms = query.split('&');
        for (var i = 0; i < parms.length; i++) {
            var pos = parms[i].indexOf('=');
            if (pos > 0) {
                var key = parms[i].substring(0, pos);
                var val = parms[i].substring(pos + 1);
                qsParm[key] = val;
            }
        }
        $( "#RoomAddForm").submit(function( event ) {
            $.ajax({
                url: '/add-room',
                method: 'post',
                dataType: 'json',
                async: true,
                data:  {
                    hotelId: qsParm.hotel,
                    type: document.getElementById('type').value,
                    price: document.getElementById('price').value,
                    floor: document.getElementById('floor').value,
                    detail: document.getElementById('detail').value
                },
                success: function (data, status) {
                    document.getElementById("RoomAddForm").reset();
                    console.log(data);
                },
                error: function (xhr, textStatus, errorThrown) {
                    console.log('Ajax request failed.');
                }
            });
            event.preventDefault();



            $('#odaEkle').click(function () {
                $("#odaEkle").attr('/add-room-index?hotel=' + qsParm.hotel);
            });

            $('#odalar').click(function () {
                $("#mylink").attr('/add-room-index?hotel=' + qsParm.hotel);
            });
        })
    </script>
{% endblock %}