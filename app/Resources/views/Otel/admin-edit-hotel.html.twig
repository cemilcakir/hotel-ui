{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <!-- form -->
        <div class="contact">

            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="spacer">
                        <h4>Otel Bilgileri</h4>
                        <form role="form">
                            <div class="form-group">
                                <label>Otel Adı</label>
                                <input type="text" class="form-control" id="name" value="" required>
                            </div>
                            <div class="form-group">
                                <label>Otel Linki</label>
                                <input type="text" class="form-control" id="link" value="" required>
                            </div>
                            <div class="form-group">
                                <label>Otel Yıldızı</label>
                                <input type="number" class="form-control" id="start" value="" required>
                            </div>
                            <div class="form-group">
                                <label>Otel Telefonu</label>
                                <input type="tel" class="form-control" id="phone" value="" required>
                            </div>
                            <div class="form-group">
                                <label>Otel E-mail Adresi</label>
                                <input type="email" class="form-control" id="mail" value="" required>
                            </div>
                            <div class="form-group">
                                <label>Otel Ülke</label>
                                <input type="text" class="form-control" id="county" value="" required>
                            </div>
                            <div class="form-group">
                                <label>Otel İl</label>
                                <input type="text" class="form-control" id="province" value="" required>
                            </div>
                            <div class="form-group">
                                <label>Otel İlçe</label>
                                <input type="text" class="form-control" id="state" value="" required>
                            </div>
                            <div class="form-group">
                                <label>Otel Açık Adresi</label>
                                <input type="text" class="form-control" id="address" value="" required>
                            </div>
                            <div class="form-group">
                                <label >İçerik</label>
                                <textarea style="resize: none;height: 150px;width: 750px" id="detail" value=""></textarea>
                            </div>
                            <button type="submit" class="btn btn-default">Değişiklikleri Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- form -->


{% endblock %}