{% extends 'base.html.twig' %}

{% block title %}Anasayfa{% endblock %}

{% block body %}

<!-- banner -->
<div class="banner">
    <img src="images/photos/banner.jpg"  class="img-responsive" alt="slide">
    <div class="welcome-message">
        <div class="wrap-info">
            <div class="information">
                <h1  class="animated fadeInDown">Bitirme 2 Otel Otomasyonu</h1>
            </div>
            <a href="#information" class="arrow-nav scroll wowload fadeInDownBig"><i class="fa fa-angle-down"></i></a>
        </div>
    </div>
</div>
<!-- banner-->

<!-- reservation-information -->
<div id="information" class="spacer reserve-info ">
    <div class="container">
        <div class="row">
            <div class="col-sm-5 col-md-12">
                <h3>Rezervasyon</h3>
                <form role="form" class="wowload fadeInRight">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-6">
                                <select class="form-control">
                                    <option>Oteller</option>
                                </select>
                            </div>
                            <div class="col-xs-6">
                                <select class="form-control">
                                    <option>Odalar</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-6">
                                <select class="form-control">
                                    <option>Yetişkin Sayısı</option>
                                </select>
                            </div>
                            <div class="col-xs-6">
                                <select class="form-control">
                                    <option>Çocuk Sayısı</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-6">
                                <label for="entranceDate">Giriş Tarihi</label>
                                <input type="date" class="form-control">
                            </div>
                            <div class="col-xs-6">
                                <label for="leaveDate">Çıkış Tarihi</label>
                                <input type="date" class="form-control">
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-default"><a href="{{ path('contact') }}">Rezerve Et</a></button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- reservation-information -->



<!-- services -->
<div class="spacer services wowload fadeInUp">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <!-- OtelCarousel -->
                <div id="OtelCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <!-- Otellerin resimleri gelecek -->
                        <div class="item active"><img src="images/photos/8.jpg" class="img-responsive" alt="slide"></div>
                        <div class="item  height-full"><img src="images/photos/9.jpg"  class="img-responsive" alt="slide"></div>
                        <div class="item  height-full"><img src="images/photos/10.jpg"  class="img-responsive" alt="slide"></div>
                        <!-- Otellerin resimleri gelecek -->
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#OtelCarousel" role="button" data-slide="prev"><i class="fa fa-angle-left"></i></a>
                    <a class="right carousel-control" href="#OtelCarousel" role="button" data-slide="next"><i class="fa fa-angle-right"></i></a>
                </div>
                <!-- OtelCarousel-->
                <div class="caption">Oteller<a href="{{ path ('hotels') }}" class="pull-right"><i class="fa fa-edit"></i></a></div>
            </div>
            <!-- OdaCarousel -->
            <div class="col-sm-6">
                <!-- OdaCarousel -->
                <div id="OdaCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <!-- Odaların resimleri gelecek -->
                        <div class="item active"><img src="images/photos/8.jpg" class="img-responsive" alt="slide"></div>
                        <div class="item  height-full"><img src="images/photos/9.jpg"  class="img-responsive" alt="slide"></div>
                        <div class="item  height-full"><img src="images/photos/10.jpg"  class="img-responsive" alt="slide"></div>
                        <!-- Odaların resimleri gelecek -->
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#OdaCarousel" role="button" data-slide="prev"><i class="fa fa-angle-left"></i></a>
                    <a class="right carousel-control" href="#OdaCarousel" role="button" data-slide="next"><i class="fa fa-angle-right"></i></a>
                </div>
                <!-- OdaCarousel -->
                <div class="caption">Odalar</div>
            </div>
        </div>
    </div>
</div>
<!-- services -->
{% endblock %}